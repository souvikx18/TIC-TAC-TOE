# Server Configuration
PORT=5000
NODE_ENV=development

# MySQL Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_secure_password_here
DB_NAME=tictactoe_db

# JWT Secret (use a strong random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# CORS Origin (frontend URL) - comma-separated for multiple origins
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:5501

# Email Configuration (for password reset)
# Use an App Password for Gmail (NOT your regular password)
# See https://support.google.com/accounts/answer/185833 for instructions
EMAIL_SERVICE=gmail
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=Tic-Tac-Toe <noreply@tictactoe.com>
FRONTEND_URL=http://localhost:3000

